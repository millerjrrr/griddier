{
  "expo": {
    "name": "Griddier",
    "slug": "Griddier",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#640092"
    },
    "ios": {
      "bundleIdentifier": "com.griddier.app",
      "supportsTablet": false,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon-android.png",
        "backgroundColor": "#640092"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.griddier.app"
    },
    "androidNavigationBar": {
      "visible": "sticky-imersive"
    },
    "web": {
      "favicon": "./assets/icon.png",
      "name": "Griddier",
      "description": "Learn poker hands efficiently"
    },
    "extra": {
      "eas": {
        "projectId": "455eebb6-dbc0-443d-80e0-cb60c5c5f6ec"
      }
    },
    "assetBundlePatterns": ["**/*"],
    "plugins": ["expo-font"]
  }
}
